<h1>New Article</h1>
<%= form_for @article do |f| %>
  <% if @article.errors.any?  %>
    <h2>The following errors prevented the article from being created</h2>
    <% @article.errors.full_messages.each do |msg| %>
      <ul>
        <li><%= msg %></li>
      </ul>
    <% end %>
  <% end %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Create Article" %>
  </p>
<% end %>
